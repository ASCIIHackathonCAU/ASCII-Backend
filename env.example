# Backend-A 데이터베이스 설정
DATABASE_URL_A=postgresql://postgres:postgres@localhost:5432/ascii_a
# 또는 SQLite 사용 시:
# DATABASE_URL_A=sqlite:///./data/ascii_a.db

# Backend-B 데이터베이스 설정
DATABASE_URL_B=postgresql://postgres:postgres@localhost:5432/ascii_b
# 또는 SQLite 사용 시:
# DATABASE_URL_B=sqlite:///./data/ascii_b.db

# Redis 설정 (Backend-A 선택)
REDIS_URL=redis://localhost:6379/0

# 보안 설정
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 환경 설정
ENVIRONMENT=development
DEBUG=True

# LLM 설정 (선택)
LLM_PROVIDER=openai
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4

# 파일 저장 경로
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
RECEIPTS_DIR=./data/receipts
LETTERS_DIR=./data/letters
EVIDENCE_PACKS_DIR=./data/evidence_packs

# 통합 백엔드 포트
PORT=8000

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 이메일 설정 (선택)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

